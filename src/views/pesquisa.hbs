<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/reuni.png">
    <link rel="stylesheet" href="/pesquisa.css">
    <link rel="stylesheet" href="/home.css">
    <link rel="stylesheet" href="/pesquisa-card.css">

    <title>Reuni</title>
</head>
<body>

    <header>
        <div class="navLeft">
            <a href="/pesquisa" class="logo_a">Re<span>Uni</span></a>
        </div>

        <div class="navRight">
            <p><img src="/coracao.png" alt="Coração de favoritos">Favoritos</p>
            <img src="/menu.png" alt="Menu">
        </div>
    </header>

    <div class="alert {{#if success_msg}}show{{/if}}">
        {{#if success_msg}}
            <div class="success">{{success_msg}}</div>
        {{/if}}
    </div>

    <section class="exposicao">
        <div class="sectionLeft">
            <div>
                <div class="titulo">
                    <h1> Encontre a república ideal para você </h1>
                </div>
                
                <div class="pesquisa">
                    <div class="box">
                        <div class="localizacao"><p><img src="/localizacao.png" alt="localização"> Cidade</p></div>
                        <div class="preco"><p><img src="/ajuste.png" alt="Preço" class="imgPreco"> Preço</p> <button class="btnpesquisar"><img src="/lupa.png" alt="Lupa de pesquisa" class="imglupa"></button></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="sectionRight">
            <img src="/menina.png">
        </div>
    </section>

    <!-- foreach de pesquisa para renderizar os perfis -->
    {{!-- --adiconar iso no controller quando for testar --}}
     {{!-- res.render('paginaPesquisa', { republicas: resultados }); --}}

    <div class="republicas">
        <aside>
            <div class="procurar">
                <p >Procurar por nome</p>
                <div>
                     <input type="text" id="inputSearch" placeholder="Digite o nome da república">
                     <ul id="resultado" style="display: none;"></ul>
                     <img src="/lupaP.png" alt="Pesquisar por republicas" class="procurarRepublicas"><p></p>
                </div>
            </div>
        </aside>
        <div>
            <section>
                <div class="titulo-rep">
                    <h2>2,582 Repúblicas encontradas em Santos </h2>
                </div>
                <div class="opc">
                    <ul>
                        <li id="firt">Para você</li>
                        <li class="brd">Repúblicas femininas</li>
                        <li class="brd">Repúblicas masculinas</li>
                        <li>Repúblicas mistas</li>
                    </ul>
                </div>
            </section>
        </div>
    </div>

{{#each republicas}}
    <section class="card">
            <div>
                <a href="/perfil?id={{id}}"><img src="/quarto.png" alt="Quarto de uma república" class="imgQuarto "></a>
            </div>
            <div>
                <h4>{{nome}}</h4>
                <p>R$ {{aluguel}} / mês</p>
                <div class="detalhes">
                    <div>
                        <img src="/mista.png">
                        {{tipo}}
                    </div>
                        
                    <div>
                        <img src="/cama.png">
                        {{quarto}}
                    </div>
                        
                    <div>
                        <img src="/banheiro.png">
                        {{banheiro}}
                    </div>    
                </div>
            </div>
    </section>
{{/each}}


     <footer>
        <div id="footer_content">
